package Exam_02;

public class practice4 {

	public static void main(String[] args) {

		while (true) {
			int dice1 = ((int) (Math.random() * 10) % 6) + 1;
			int dice2 = ((int) (Math.random() * 10) % 6) + 1;
			
			if (dice1 + dice2 == 5) {
				System.out.printf("주사위가 %d, %d가 나왔습니다! \n", dice1, dice2);
				break;
			}
		}

	}

}
